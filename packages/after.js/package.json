{
  "name": "@jaredpalmer/after",
  "private": false,
  "version": "3.1.3",
  "description": "Build isomorphic Javascript applications with ease.",
  "repository": {
    "type": "git",
    "url": "git@github.com:batusai513/gehen.git",
    "directory": "packages/after.js"
  },
  "author": "Richard Roncancio <batusai513@msn.com>",
  "license": "MIT",
  "sideEffects": false,
  "module": "build/esm/index.js",
  "main": "build/cjs/index.js",
  "types": "build/cjs/index.d.ts",
  "files": [
    "build",
    "after.js",
    "document.js",
    "asyncComponent.js",
    "ensureReady.js",
    "render.js",
    "loadInitialProps.js",
    "serializeData.js",
    "getAssets.js"
  ],
  "scripts": {
    "prepare": "rm -rf build && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.build.json --module es2015 --outDir build/esm",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir build/cjs",
    "start": "tsc -p tsconfig.build.json --module commonjs --outDir build -w",
    "test": "jest test --env=jsdom --no-cache",
    "test:ci": "CI=true yarn test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/test/**/*test.ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "peerDependencies": {
    "express": ">=4",
    "razzle-dev-utils": ">=3.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "react-helmet": ">=6.0.0",
    "react-router-dom": ">=5.0.0",
    "serialize-javascript": ">=5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-helmet": "^6.1.1",
    "@types/react-router-dom": "^5.1.7",
    "@types/serialize-javascript": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.28.0",
    "eslint-plugin-react": "^7.24.0",
    "express": "^4.17.1",
    "jest": "^27.0.4",
    "razzle": "^3.1.0",
    "razzle-dev-utils": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^5.2.0",
    "serialize-javascript": "^5.0.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "babel-plugin-after": "^3.1.3"
  }
}
